<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.ait.igenem.CreateDecisionBlobsActivity">


    <android.support.v7.widget.RecyclerView
        android:id="@+id/recyclerBlob"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:scrollbars="vertical">

    </android.support.v7.widget.RecyclerView>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <Button
            android:paddingTop="5dp"
            android:gravity="center"
            android:id="@+id/btnNewBlob"
            style="@style/CircleButton"
            android:background="@drawable/plus_gray" />

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <Button
                android:id="@+id/btnBlobActivityBack"
                style="@style/RoundedButton"
                android:layout_marginBottom="2dp"
                android:text="@string/btn_text_back" />

            <Button
                android:id="@+id/btnBlobActivitySave"
                style="@style/RoundedButton"
                android:layout_alignParentEnd="true"
                android:layout_marginBottom="2dp"
                android:text="@string/btn_text_save" />
        </RelativeLayout>
    </LinearLayout>

</LinearLayout>
