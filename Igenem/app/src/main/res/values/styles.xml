<resources>

    <!-- activity themes -->

    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="AppTheme.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>
    
    <style name="LoginActivity" parent="AppTheme.NoActionBar">
        <item name="android:background">@color/colorTurq</item>
        <item name="android:statusBarColor">@android:color/transparent</item>
    </style>

    <style name="BasicActivityCloud" parent="AppTheme.NoActionBar">
        <item name="android:background">@color/colorCloud</item>
        <item name="android:statusBarColor">@color/colorPrimaryDark</item>
    </style>

    <style name="BasicActivityTurq" parent="AppTheme.NoActionBar">
        <item name="android:background">@color/colorTurq</item>
        <item name="android:statusBarColor">@color/colorPrimaryDark</item>
    </style>

    <style name="ResetPasswordDialogFragment" parent="AppTheme.NoActionBar">
        <item name="android:background">@drawable/alert_dialog_window</item>
        <item name="android:windowIsFloating">true</item>
    </style>

    <!-- buttons -->

    <style name="WideRoundedButton">
        <item name="android:layout_height">40dp</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:background">@drawable/light_gray_button</item>
        <item name="android:textColor">@color/colorCloud</item>
        <item name="android:textSize">20sp</item>
        <item name="android:textAllCaps">false</item>
    </style>

    <style name="RoundedButton">
        <item name="android:layout_height">40dp</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:background">@drawable/light_gray_button</item>
        <item name="android:textColor">@color/colorCloud</item>
        <item name="android:textSize">20sp</item>
        <item name="android:textAllCaps">false</item>
    </style>

    <style name="RoundedButtonGray">
        <item name="android:layout_height">40dp</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:background">@drawable/gray_button</item>
        <item name="android:textColor">@color/colorCloud</item>
        <item name="android:textSize">20sp</item>
        <item name="android:textAllCaps">false</item>
    </style>

    <style name="CircleButton">
        <item name="android:layout_width">70dp</item>
        <item name="android:layout_height">70dp</item>
        <item name="android:layout_gravity">center</item>
        <item name="android:layout_centerHorizontal">true</item>
    </style>

    <!-- text -->

    <style name="RoundedEditText">
        <item name="android:layout_height">40dp</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:background">@drawable/login_edit_text</item>
        <item name="android:textColor">@color/colorPrimary</item>
        <item name="android:textSize">20sp</item>
        <item name="android:textColorHint">@color/colorLightGray</item>
    </style>

    <style name="LoginTitle">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">@color/colorPrimaryDark</item>
        <item name="android:textSize">55sp</item>
        <item name="android:layout_marginTop">65dp</item>
        <item name="android:layout_gravity">center_horizontal</item>
    </style>

    <style name="CenterText">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">@color/colorPrimary</item>
        <item name="android:textSize">25sp</item>
        <item name="android:layout_gravity">center</item>
        <item name="android:layout_centerHorizontal">true</item>

    </style>

    <!-- other -->

    <style name="PushDownSpace">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">0dp</item>
        <item name="android:layout_weight">1</item>
    </style>

</resources>
